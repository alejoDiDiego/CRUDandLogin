<div>
    <p class="h1">Registrarse</p>

    <form action="@Url.Action("CrearUsuario", "Usuarios")" class="w-75">
        <p>@ViewBag.ErrorUsuario</p>
        <div class="form-group mt-4">
            <label>Nombre de usuario</label>
            <input name="nombreUsuario" required type="text" class="form-control" placeholder="Nombre de usuario" />
        </div>

        <div class="form-group">
            <label>Contraseña</label>
            <input name="contrasena" required type="text" class="form-control" placeholder="Contraseña" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input name="email" required type="email" class="form-control" placeholder="Email" />
        </div>

        <div class="form-group">
            <label>Tipo de usuario</label>
            <select name="tipo" required class="custom-select">
                <option value="" disabled selected="true">-- Seleccione un tipo de usuario --</option>
                <option value="cliente">Cliente</option>
                <option value="vendedor">Vendedor</option>
            </select>
        </div>

        <input type="submit" value="Registrarse" class="btn btn-primary" />
    </form>

</div>

<style>
    .h1{
        color: #1363DF;
    }

</style>